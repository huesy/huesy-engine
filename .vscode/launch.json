{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Game Debug (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/game.app/Contents/MacOS/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Compile Debug",
            "sourceLanguages": ["cpp"]
        },
        {
            "name": "Launch Game Release (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/release/bin/game.app/Contents/MacOS/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Compile Release",
            "sourceLanguages": ["cpp"]
        },
        {
            "name": "Launch Game Debug (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/game.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Compile Debug Windows",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": false
            }
        },
