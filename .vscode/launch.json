{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Game Debug",
            "type": "cppdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/build/debug/bin/game.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true,
                    },
                ],
                "logging": {
                    "moduleLoad": false,
                    "trace": false,
                    "engineLogging": false,
                    "programOutput": true,
                    "exceptions": false,
                },
            },
            "osx": {
                "program": "${workspaceFolder}/build/debug/bin/game.app/Contents/MacOS/game",
            },
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            // "preLaunchTask": "Compile Debug",
        },
        {
            "name": "Launch Game Release",
            "type": "cppdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/build/release/bin/game.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true,
                    },
                ],
                "logging": {
                    "moduleLoad": false,
                    "trace": false,
                    "engineLogging": false,
                    "programOutput": true,
                    "exceptions": false,
                },
            },
            "osx": {
                "program": "${workspaceFolder}/build/release/bin/game.app/Contents/MacOS/game",
            },
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            // "preLaunchTask": "Compile Release",
